<div class="row">
  <div  class="col-3 offset-6">

<%= form_for(@task) do |f| %>
  <%= f.check_box :completed %>
  <%= f.submit "Save changes" %>
<% end %>

<h1><%= @task.title %><h1/>
<p><%= @task.details %></p>
    <%= link_to "Edit", edit_task_path , {:class => "btn btn-primary"} %>
    <%= link_to "Delete Task", task_path(@task), method: :delete, class: "btn btn-primary", data: { confirm: "Are you sure?"}%>
    <%= link_to "Back to list",  tasks_path, {:class => "btn btn-primary"} %>
  </div>
</div>
